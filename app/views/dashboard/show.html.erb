<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
      <%= link_to "Logout", logout_path, method: :delete %>
      <%= image_tag current_user.image_url, width: 230, height: 230, class: "img-rounded" %>
      <h1>
        <div class="name"><%= @github.name %> </div>
        <div class="username"><%= current_user.name %></div>
      </h1>
      <div>
        <div class="bio"><%= @github.bio %></div>
      </div>
      <%= "Followers: #{@github.followers}" %>
      <%= "Starred: #{@github.starred_repos_count}" %>
      <%= "Following: #{@github.following}" %>
    </div>
  </div>
</div>
